@model List<PdqkLesson6.Models.PdqkEmployee>
@{
    ViewData["Title"] = "Danh sách nhân viên";
}


<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered  table-hover">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Họ và Tên</th>
            <th>Ngày Sinh</th>
            <th>Email</th>
            <th>Điện Thoại</th>
            <th>Học Phí (VNĐ)</th>
            <th>Trạng Thái</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.PdqkId</td>
                <td>@emp.PdqkName</td>
                <td>@emp.PdqkBirthDay.ToString("dd/MM/yyyy")</td>
                <td>@emp.PdqkEmail</td>
                <td>@emp.PdqkPhone</td>
                <td>@emp.PdqkSalary.ToString("N0")</td>
                <td>
                    @if (emp.PdqkStatus == 1)
                    {
                        <span class="badge bg-success">Đang học</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Đã nghỉ</span>
                    }
                </td>

                <td>
                    <a asp-action="GetEmployee" asp-route-id="@emp.PdqkId" class="btn btn-info btn-sm">Xem</a>
                </td>
            </tr>
        }
    </tbody>
</table>

